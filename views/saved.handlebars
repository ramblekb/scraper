	<div class="container" id="wrapper">			
		<h1>NYT Articles</h1>
		<h2>Saved Articles</h2>
		{{#each article}}
			<div class="row">
				<div class="col-md-12">
					<div class="panel panel-primary">
						<div class="panel-heading">
							<div class="row">
								<div class="col-md-8">
									<h3 class="article-title panel-title" data-id="{{this.id}}">
										{{this.title}}
									</h3>
								</div>
								
								<div class="col-md-2">
									<form action="/notes/{{this._id}}" method="GET">
										<button type="submit" class="add-note-btn btn btn-success" id="comment-btn">Comments</button>
									</form>
								</div>
										
								<div class="col-md-2">
									<form action="/delete/{{this._id}}?_method=PUT" method="POST">
							          	<input type="hidden" name="delete-btn" value="false">
							          	<button type="submit" class="delete-btn btn btn-danger">Delete Article</button>
							        </form>
								</div>
				        	</div>
						</div>

						<div class="article-link panel-body">
							<a href="{{this.link}}" target="_blank">{{this.link}}</a>
						</div>
					</div>
				</div>
			</div>
		{{/each}}
	</div>

